{{#partial "contenido"}}
<h2>Sugerencias del evento {{idEvento}}</h2>
<div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Prendas Superiores</th>
				<th scope="col">Prenda Inferior</th>
				<th scope="col">Calzado</th>
				<th scope="col">Accesorio</th>
			</tr>
		</thead>
		<tbody>
			{{#each sugerencias}}
			<tr>
				<th scope="row">{{@index}}</th>
				<td>
					{{#each atuendo.prendasSuperiores}}
					<h6><u>PRENDA {{@index}}</u></h6>
					<ul>
						<li>Tipo de prenda: <b>{{tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{tipoTela}}</b></li>
						<li>Color primario: <span style="color: {{colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if colorSecundario}}
							<span style="color: {{colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
					{{/each}}
				</td>
				<td>
					<ul>
						<li>Tipo de prenda: <b>{{atuendo.prendaInferior.tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{atuendo.prendaInferior.tipoTela}}</b></li>
						<li>Color primario: <span
								style="color: {{atuendo.prendaInferior.colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if atuendo.prendaInferior.colorSecundario}}
							<span style="color: {{atuendo.prendaInferior.colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
				</td>
				<td>
					<ul>
						<li>Tipo de prenda: <b>{{atuendo.calzado.tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{atuendo.calzado.tipoTela}}</b></li>
						<li>Color primario: <span style="color: {{atuendo.calzado.colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if atuendo.calzado.colorSecundario}}
							<span style="color: {{atuendo.calzado.colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
				</td>
				<td>
					<ul>
						<li>Tipo de prenda: <b>{{atuendo.accesorio.tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{atuendo.accesorio.tipoTela}}</b></li>
						<li>Color primario: <span style="color: {{atuendo.accesorio.colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if atuendo.accesorio.colorSecundario}}
							<span style="color: {{atuendo.accesorio.colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>
{{/partial}} {{> layout.hbs}}