{{#partial "contenido"}}
<div>
	<h3>Prenda final</h3>
	<form action="/quemepongo/prenda/listo" method="post">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Tipo</th>
					<th scope="col">Tela</th>
					<th scope="col">Color Primario</th>
					<th scope="col">Color Secundario</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{tipoPrenda}}</td>
					<td>{{tipoTela}}</td>
					<td style="color: {{colorPrimario}}">&#9632</td>
					{{#if colorSecundario}}
					<td style="color: {{colorSecundario}}">&#9632</td>
					{{else}}
					<td>----</td>
					{{/if}}
				</tr>
			</tbody>
		</table>
		<input class="btn btn-primary" type="submit" value="Confirmar" href="/quemepongo/prenda/listo" />
	</form>
</div>
{{/partial}} {{> layout.hbs}}