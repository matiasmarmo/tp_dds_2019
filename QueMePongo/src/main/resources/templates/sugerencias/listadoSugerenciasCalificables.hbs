{{#partial "contenido"}}
<h2 class="titulo-seccion">Estas son las sugerencias que previamente acepto, favor de calificarlas segun que tan bien
	abrigo gracias</h2>
<div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">PRENDAS SUPERIORES</th>
				<th scope="col">PRENDA INFERIOR</th>
				<th scope="col">CALZADO</th>
				<th scope="col">ACCESORIO</th>
				<th scope="col">ESTADO</th>
			</tr>
		</thead>
		<tbody>
			{{#each sugerencias}}
			<tr>
				<th scope="row">{{@index}}</th>
				<td>
					{{#each atuendo.prendasSuperiores}}
					<h6 style="color:#444444"><u>Prenda Superior {{@index}}</u></h6>
					<ul>
						<li>Tipo de prenda: <b>{{tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{tipoTela}}</b></li>
						<li>Color primario: <span style="color: {{colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if colorSecundario}}
							<span style="color: {{colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
					{{/each}}
				</td>
				<td>
					<ul>
						<li>Tipo de prenda: <b>{{atuendo.prendaInferior.tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{atuendo.prendaInferior.tipoTela}}</b></li>
						<li>Color primario: <span
								style="color: {{atuendo.prendaInferior.colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if atuendo.prendaInferior.colorSecundario}}
							<span style="color: {{atuendo.prendaInferior.colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
				</td>
				<td>
					<ul>
						<li>Tipo de prenda: <b>{{atuendo.calzado.tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{atuendo.calzado.tipoTela}}</b></li>
						<li>Color primario: <span style="color: {{atuendo.calzado.colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if atuendo.calzado.colorSecundario}}
							<span style="color: {{atuendo.calzado.colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
				</td>
				<td>
					<ul>
						<li>Tipo de prenda: <b>{{atuendo.accesorio.tipoPrenda}}</b></li>
						<li>Tipo de tela: <b>{{atuendo.accesorio.tipoTela}}</b></li>
						<li>Color primario: <span style="color: {{atuendo.accesorio.colorPrimario.rgb}}">&#9632</span>
						</li>
						<li>Color secundario:
							{{#if atuendo.accesorio.colorSecundario}}
							<span style="color: {{atuendo.accesorio.colorSecundario.rgb}}">&#9632</span>
							{{else}}
							<b>N/A</b>
							{{/if}}
						</li>
					</ul>
				</td>
				<td>
					<p>{{estado}} {{calificacion}}</p>
					<div style="display:flex; flex-direction: column; justify-content: stretch; text-align: center">
						<form method="post" action="/quemepongo/eventos/sugerencias/calificacion">
							<input type="hidden" name="idSugerencia" value="{{id}}" />
							<select aria-labelledby="dropdownMenuLink" name="calificacion" class="dropdown">
								<option class="dropdown-item" selected="selected" disabled>{{calificacion}}</option>
								<option class="dropdown-item" value="1">1</option>
								<option class="dropdown-item" value="2">2</option>
								<option class="dropdown-item" value="3">3</option>
								<option class="dropdown-item" value="4">4</option>
								<option class="dropdown-item" value="5">5</option>
								<option class="dropdown-item" value="6">6</option>
								<option class="dropdown-item" value="7">7</option>
								<option class="dropdown-item" value="8">8</option>
								<option class="dropdown-item" value="9">9</option>
								<option class="dropdown-item" value="10">10</option>
							</select>
							<button type="submit" class="btn btn-light"
								style="margin-bottom: 5px; text-align: center; margin-left:10%; margin-top:5%; margin-right:10%">Enviar</button>
						</form>
					</div>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>
{{/partial}} {{> layout.hbs}}